@using Project_PlantShop.Data
@inject PlantContext _context
@{
    List<PlantUser> list = _context.GetPlantUser();
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRoleManager">
            <div class="form-group" id="members">
                <div class="row mt-2">
                    <div class="col-md-4">
                        <input type="number" name="idUser"></input>
                    </div>
                    <div class="col-md-10">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="roleId" id="inlineRadio1" value="1">
                            <label class="form-check-label" for="inlineRadio1">Staff</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="roleId" id="inlineRadio2" value="2">
                            <label class="form-check-label" for="inlineRadio2">Manager</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="roleId" id="inlineRadio3" value="3">
                            <label class="form-check-label" for="inlineRadio3">User</label>
                        </div>

                    </div>
                </div>

            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" />
            </div>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var item in ViewBag.Uer as List<Project_PlantShop.Controllers.AccountController.RoleUser>)
                {
                     <tr>
                    <th scope="row">@item.UserId</th>
                    <td>@item.EmailID</td>
                    <td>@item.RoleName</td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>