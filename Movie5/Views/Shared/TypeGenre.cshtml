@using Movie5.Services
@inject IGenreService _genreService
@{
    List<Genre> list = _genreService.GetGenres();
}

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<li class="nav-item nav-item dropdown">
    <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Genre
    </a>
    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
        @{
            foreach (var genre in list)
            {
              <li><a class="dropdown-item" asp-area="" asp-controller="Genres" asp-action="GenreList" asp-route-id=@genre.Id>@Html.DisplayFor(modelItem => genre.Name)</a></li>
            }
          }
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" asp-area="" asp-controller="Genres" asp-action="Index">About</a></li>
        </ul>
    </li>


        
