@using NetflixMovie.Services
@inject IMenuService _imenuService
@{
    List<Genre> list = _imenuService.GetGernes();
}

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<li class="nav-item nav-item dropdown">
    <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Genre Detail
    </a>
    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
        @{
            foreach (var genre in list)
            {
                    <li><a class="dropdown-item" asp-area="" asp-controller="Menu" asp-action="Detail" asp-route-id=@genre.Id>@Html.DisplayFor(modelItem => genre.GenreName)</a></li>
            }
            }
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" asp-area="" asp-controller="Menu" asp-action="Index">About</a></li>
        </ul>
    </li>


        
