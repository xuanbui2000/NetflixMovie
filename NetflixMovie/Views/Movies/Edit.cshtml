@model NetflixMovie.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1 class="title_h">Edit</h1>

<h4 class="title_h">Movie</h4>
<hr />
<div class="row form_main">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class=" text-light"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label  text-light"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class=" text-light"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label  text-light"></label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class=" text-light"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label  text-light"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class=" text-light"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label text-light"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class=" text-light"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
